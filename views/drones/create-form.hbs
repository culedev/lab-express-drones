
<div class="container">
   <div class="col-md-4 offset-md-4">
      <h2>Create a new drone</h2>

      <form action="/drones/create" method="post" class="card card-body text-white" style="background-color: #202020;">
         <label for="name">Name</label>
         <input type="text" name="name" placeholder="Drone's brand" class="form-control mb-2">
         <br>
         <label for="propellers">Propellers</label>
         <input type="text" name="propellers" placeholder="propellers number" class="form-control mb-2">
         <br>
         <label for="maxSpeed">Speed</label>
         <input type="text" name="maxSpeed" placeholder="speed number" class="form-control mb-2">

         <button class="btn btn-primary">Create Drone</button>

      </form>
</div>